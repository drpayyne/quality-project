doctype html
html(lang='en')
	head
		meta(charset='UTF-8')
		meta(name='viewport', content='width=device-width, initial-scale=1')
		title IQAC AQAR
		link(rel='stylesheet', href='/css/dashboard.css')
		link(rel='stylesheet', href='/css/bootstrap.css')
		link(rel='stylesheet', href='/css/normalize.min.css')
		link(rel='stylesheet', href='/css/form.css')
		script.
			var username='#{cookies.user.username}';
	body
		.container-fluid.h-100
			nav.navbar.navbar-light.fixed-top(style='background-color: #e3f2fd;')
				a.navbar-brand(href='/dashboard') Back
				span.navbar-brand.mb-0.h1 IQAC Criterion 5 - #{cookies.user.username}
					if (cookies.user.username == 'HOQ' && cookies.department != 'HOQ')
						span.navbar-brand.mb-0.h1 - #{cookies.department}
				a.navbar-brand(href='/home') Logout
			.row.my-4
				.col
					form(action='/form/criterion5', method='POST')
						legend
							span.number 5
							| Student Support and Progression
						if cookies.department == 'HOQ'
							label 5.1 Contribution of IQAC in enhancing awareness about Student Support Services:
								span.badge.badge-primary  HOQ
							.input-groups
								textarea.form-control(type='string', name='iqac_contribution_student_support_services', rows=4) #{form.iqac_contribution_student_support_services}
							label 5.2 Efforts made by the institution for tracking the progression:
								span.badge.badge-primary  HOQ
							.input-group
								textarea.form-control(type='string', name='efforts_tracking_progression', rows=4) #{form.efforts_tracking_progression}
							label 5.3 (a) Total Number of students
								span.badge.badge-primary  HOQ
							table(width='100%')
								tr
									th UG
									th PG
									th Ph.D
									th Others
								tr
									td
										.input-group
											input.form-control(type='number', name='total_no_of_students.ug_students', value=form.total_no_of_students.ug_students)
									td
										.input-group
											input.form-control(type='number', name='total_no_of_students.pg_students', value=form.total_no_of_students.pg_students)
									td
										.input-group
											input.form-control(type='number', name='total_no_of_students.phd_students', value=form.total_no_of_students.phd_students)
									td
										.input-group
											input.form-control(type='number', name='total_no_of_students.other_students', value=form.total_no_of_students.other_students)
							label 5.3 (b) No. of students outside the state
								span.badge.badge-primary  HOQ
							.input-group
								input.form-control(type='number', name='no_of_students_outside_the_state', value=form.no_of_students_outside_the_state)
							label 5.3 (c) No. of international students
								span.badge.badge-primary  HOQ
							table(width='100%')
								tr
									th(colspan='2') Men
									th(colspan='2') Women
								tr
									th No.
									th %
									th No.
									th %
								tr
									td
										.input-group
											input.form-control(type='number', name='men.students_number', value=form.men.students_number)
									td
										.input-group
											input.form-control(type='number', name='men.percentage', value=form.men.percentage)
									td
										.input-group
											input.form-control(type='number', name='women.students_number', value=form.women.students_number)
									td
										.input-group
											input.form-control(type='number', name='women.percentage', value=form.women.percentage)
							br
							table(width='100%')
								tr
									th(colspan='5') Last Year
									th(colspan='5') This Year
								tr
									th General
									th SC
									th ST
									th OBC
									th Physically Challenged
									//th Total
									th General
									th SC
									th ST
									th OBC
									th Physically Challenged
									//th Total
								tr
									td
										.input-group
											input.form-control(type='number', name='last_year.general', value=form.last_year.general)
									td
										.input-group
											input.form-control(type='number', name='last_year.sc', value=form.last_year.sc)
									td
										.input-group
											input.form-control(type='number', name='last_year.st', value=form.last_year.st)
									td
										.input-group
											input.form-control(type='number', name='last_year.obc', value=form.last_year.obc)
									td
										.input-group
											input.form-control(type='number', name='last_year.physically_challenged', value=form.last_year.physically_challenged)
									//td
										.input-group
											input.form-control(type='number', name='last_year.students_total', value=form.last_year.students_total)
									td
										.input-group
											input.form-control(type='number', name='this_year.general', value=form.this_year.general)
									td
										.input-group
											input.form-control(type='number', name='this_year.sc', value=form.this_year.sc)
									td
										.input-group
											input.form-control(type='number', name='this_year.st', value=form.this_year.st)
									td
										.input-group
											input.form-control(type='number', name='this_year.obc', value=form.this_year.obc)
									td
										.input-group
											input.form-control(type='number', name='this_year.physically_challenged', value=form.this_year.physically_challenged)
									//td
										.input-group
											input.form-control(type='number', name='this_year.students_total', value=form.this_year.students_total)
							br
							table(width='100%')
								tr
									th Demand Ratio
									th Dropout %
								tr
									td
										.input-group
											input.form-control(type='number', name='demand_ratio', value=form.demand_ratio)
									td
										.input-group
											input.form-control(type='number', name='dropout_percentage', value=form.dropout_percentage)
							label 5.4 Details of student support mechanism for coaching for competitive examinations(If any):
								span.badge.badge-primary  HOQ
							.input-group
								textarea.form-control(type='string', name='student_support_mechanism', rows=4) #{form.student_support_mechanism}
							label No. of students beneficiaries:
								span.badge.badge-primary  HOQ
							.input-group
								input.form-control(type='number', name='no_of_student_beneficiaries', value=form.no_of_student_beneficiaries)
							label 5.5 No. of students qualified in these examinations:
								span.badge.badge-primary  HOQ
							table(style='width:100%')
								tr
									th NET
									td
										.input-group
											input.form-control(type='number', name='no_of_students_qualified_for_examinations.net', value=form.no_of_students_qualified_for_examinations.net)
								tr
									th SET/SLET
									td
										.input-group
											input.form-control(type='number', name='no_of_students_qualified_for_examinations.set_slet', value=form.no_of_students_qualified_for_examinations.set_slet)
								tr
									th GATE
									td
