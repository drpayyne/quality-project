							label Exhibition:
								span.badge.badge-primary HOQ
							table(width='100%')
								tr
									th State/ University level
									th National level
									th International level
								tr
									td
										.input-group
											input.form-control(type='number', name='student_organized_initiatives.exhibition.state_uni_level', value=form.student_organized_initiatives.exhibition.state_uni_level)
