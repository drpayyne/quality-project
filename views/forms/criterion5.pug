											input.form-control(type='number', name='no_of_students_qualified_for_examinations.gate', value=form.no_of_students_qualified_for_examinations.gate)
								tr
									th CAT
									td
										.input-group
											input.form-control(type='number', name='no_of_students_qualified_for_examinations.cat', value=form.no_of_students_qualified_for_examinations.cat)
								tr
									th IAS/IPS etc.
									td
										.input-group
											input.form-control(type='number', name='no_of_students_qualified_for_examinations.ias_ips', value=form.no_of_students_qualified_for_examinations.ias_ips)
								tr
									th State PSC
									td
										.input-group
											input.form-control(type='number', name='no_of_students_qualified_for_examinations.state_psc', value=form.no_of_students_qualified_for_examinations.state_psc)
								tr
									th UPSC
									td
										.input-group
											input.form-control(type='number', name='no_of_students_qualified_for_examinations.upsc', value=form.no_of_students_qualified_for_examinations.upsc)
								tr
									th Others
									td
										.input-group
											input.form-control(type='number', name='no_of_students_qualified_for_examinations.others', value=form.no_of_students_qualified_for_examinations.others)
							label 5.6 Details of student counselling and career guidance:
								span.badge.badge-primary  HOQ
							.input-group
								textarea.form-control(type='string', name='student_counselling_career_guidance', rows=4) #{form.student_counselling_career_guidance}
							label No. of students benefitted:
								span.badge.badge-primary  HOQ
							.input-group
								input.form-control(type='number', name='no_of_students_benefitted', value=form.no_of_students_benefitted)
							label 5.7 Details of campus placement:
								span.badge.badge-primary  HOQ
							table(width='100%')
								tr
									th(colspan='3') On Campus
									th Off Campus
								tr
									th Number of Organizations Visited
									th Number of Students Participated
									th Number of Students Placed
									th Number of Students Placed
								tr
									td
										.input-group
											input.form-control(type='number', name='campus_placement_details.on_campus.organizations_visited', value=form.campus_placement_details.on_campus.organizations_visited)
									td
										.input-group
											input.form-control(type='number', name='campus_placement_details.on_campus.students_participated', value=form.campus_placement_details.on_campus.students_participated)
									td
										.input-group
											input.form-control(type='number', name='campus_placement_details.on_campus.placed_students', value=form.campus_placement_details.on_campus.placed_students)
									td
										.input-group
											input.form-control(type='number', name='campus_placement_details.off_campus.placed_students', value=form.campus_placement_details.off_campus.placed_students)
							label 5.8 Details of gender sensitization programmes:
								span.badge.badge-primary  HOQ
							.input-groups
								textarea.form-control(type='string', name='gender_sensitization_programmes', rows=4) #{form.gender_sensitization_programmes}
							label 5.9 Students Activities:
							label 5.9.1 No. of students participated in Sports, Games and other events:
								span.badge.badge-primary  HOQ
							table(width='100%')
								tr
									th State/ University level
									th National level
									th International level
								tr
									td
										.input-group
											input.form-control(type='number', name='students_activities.participation_sports_games_other_events.state_uni_level', value=form.students_activities.participation_sports_games_other_events.state_uni_level)
									td
										.input-group
											input.form-control(type='number', name='students_activities.participation_sports_games_other_events.national_level', value=form.students_activities.participation_sports_games_other_events.national_level)
									td
										.input-group
											input.form-control(type='number', name='students_activities.participation_sports_games_other_events.international_level', value=form.students_activities.participation_sports_games_other_events.international_level)
							label No. of students participated in cultural events:
								span.badge.badge-primary  HOQ
							table(width='100%')
								tr
									th State/ University level
									th National level
									th International level
								tr
									td
										.input-group
											input.form-control(type='number', name='students_activities.participation_cultural_events.state_uni_level', value=form.students_activities.participation_cultural_events.state_uni_level)
									td
										.input-group
											input.form-control(type='number', name='students_activities.participation_cultural_events.national_level', value=form.students_activities.participation_cultural_events.national_level)
									td
										.input-group
											input.form-control(type='number', name='students_activities.participation_cultural_events.international_level', value=form.students_activities.participation_cultural_events.international_level)
							label 5.9.2 No. of medals /awards won by students in Sports, Games and other events
							label Sports:
								span.badge.badge-primary  HOQ
							table(width='100%')
								tr
									th State/ University level
									th National level
									th International level
								tr
									td
										.input-group
											input.form-control(type='number', name='students_activities.no_of_medals_awards.sports_games.state_uni_level', value=form.students_activities.no_of_medals_awards.sports_games.state_uni_level)
									td
										.input-group
											input.form-control(type='number', name='students_activities.no_of_medals_awards.sports_games.national_level', value=form.students_activities.no_of_medals_awards.sports_games.national_level)
									td
										.input-group
											input.form-control(type='number', name='students_activities.no_of_medals_awards.sports_games.international_level', value=form.students_activities.no_of_medals_awards.sports_games.international_level)
							label Cultural:
								span.badge.badge-primary HOQ
							table(width='100%')
								tr
									th State/ University level
									th National level
									th International level
								tr
									td
										.input-group
											input.form-control(type='number', name='students_activities.no_of_medals_awards.culturals.state_uni_level', value=form.students_activities.no_of_medals_awards.culturals.state_uni_level)
									td
										.input-group
											input.form-control(type='number', name='students_activities.no_of_medals_awards.culturals.national_level', value=form.students_activities.no_of_medals_awards.culturals.national_level)
									td
										.input-group
											input.form-control(type='number', name='students_activities.no_of_medals_awards.culturals.international_level', value=form.students_activities.no_of_medals_awards.culturals.international_level)
						label 5.10 Scholarships and Financial Support:
							span.badge.badge-success DEPARTMENT
						table(style='width:100%')
							tr
								th
								th Number of students
								th Amount
							tr
								th Financial support from institution
								td
									.input-group
										input.form-control(type='number', name='scholarship_financial_support.institute_finance_support.student_no', value=form.scholarship_financial_support.institute_finance_support.student_no, disabled=(cookies.department == 'HOQ'))
								td
									.input-group
										input.form-control(type='number', name='scholarship_financial_support.institute_finance_support.amount_in_lakhs', value=form.scholarship_financial_support.institute_finance_support.amount_in_lakhs, disabled=(cookies.department == 'HOQ'))
							tr
								th Financial support from government
								td
									.input-group
										input.form-control(type='number', name='scholarship_financial_support.govt_financial_support.student_no', value=form.scholarship_financial_support.govt_financial_support.student_no, disabled=(cookies.department == 'HOQ'))
								td
									.input-group
										input.form-control(type='number', name='scholarship_financial_support.govt_financial_support.amount_in_lakhs', value=form.scholarship_financial_support.govt_financial_support.amount_in_lakhs, disabled=(cookies.department == 'HOQ'))
							tr
								th Financial support from other sources
								td
									.input-group
										input.form-control(type='number', name='scholarship_financial_support.other_financial_support.student_no', value=form.scholarship_financial_support.other_financial_support.student_no, disabled=(cookies.department == 'HOQ'))
								td
									.input-group
										input.form-control(type='number', name='scholarship_financial_support.other_financial_support.amount_in_lakhs', value=form.scholarship_financial_support.other_financial_support.amount_in_lakhs, disabled=(cookies.department == 'HOQ'))
							tr
								th Number of students who received International/ National recognitions
								td
									.input-group
										input.form-control(type='number', name='scholarship_financial_support.international_national_recognition.student_no', value=form.scholarship_financial_support.international_national_recognition.student_no, disabled=(cookies.department == 'HOQ'))
								td
									.input-group
										input.form-control(type='number', name='scholarship_financial_support.international_national_recognition.amount_in_lakhs', value=form.scholarship_financial_support.international_national_recognition.amount_in_lakhs, disabled=(cookies.department == 'HOQ'))
						if cookies.department == 'HOQ'
							label 5.11 Student organised / initiatives
							label Fairs:
